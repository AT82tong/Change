<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_light_maya_blue_bottom_aquamarine_top">

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/signup_displayname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup"
        android:text="Displayname"
        android:textAllCaps="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signup_displayname_layout"
        android:layout_width="340dp"
        android:layout_height="72dp"
        android:layout_below="@id/signup_displayname"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/signup_displayname_text"
            android:layout_width="340dp"
            android:layout_height="38dp"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:background="@drawable/round_input_text_transparent_bg"
            android:inputType="text"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/signup_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textAllCaps="true"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/signup_displayname_layout"
        android:textStyle="bold" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signup_email_layout"
        android:layout_width="340dp"
        android:layout_height="72dp"
        android:layout_below="@id/signup_email"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/signup_email_text"
            android:layout_width="340dp"
            android:layout_height="38dp"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:background="@drawable/round_input_text_transparent_bg"
            android:inputType="textEmailAddress"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/signup_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginLeft="40dp"
        android:textAllCaps="true"
        android:layout_below="@+id/signup_email_layout"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signup_password_layout"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_below="@id/signup_password"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/signup_password_text"
            android:layout_width="340dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:background="@drawable/round_input_text_transparent_bg"
            android:ems="10"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/signup_password_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:layout_marginLeft="40dp"
        android:textAllCaps="true"
        android:layout_below="@+id/signup_password_layout"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signup_password_confirm_layout"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_below="@id/signup_password_confirm"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/signup_password_confirm_text"
            android:layout_width="340dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:background="@drawable/round_input_text_transparent_bg"
            android:ems="10"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/signup_submit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/signup_password_confirm_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_style_summer_sky_background"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/signup_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/signup_submit"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/button_style_white_background"
        android:text="Cancel"
        android:textColor="@color/summerSky"
        android:textSize="18sp"
        android:textAllCaps="false"/>

    <!--progressBar, need to implement later-->
    <ProgressBar
        android:id="@+id/pg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>


</RelativeLayout>


