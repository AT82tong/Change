<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/post_service_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/text_post_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Post Service"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/post_service_cancel"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_marginStart="15dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/cancel_bottom"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/post_service_banner" />


    <ScrollView
        android:id="@+id/info_area_new_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/post_service_banner"
        android:layout_above="@id/post_service_submit_btn">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <EditText
                android:id="@+id/service_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:hint="Service Title"
                android:inputType="text"
                android:gravity="top"
                android:singleLine="true"
                android:background="@drawable/edit_text_style"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/service_name_input" />


            <EditText
                android:id="@+id/service_price_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/service_name_input"
                android:layout_marginTop="10dp"
                android:hint="Price"
                android:inputType="numberDecimal"
                android:textSize="18sp"
                android:gravity="top"
                android:singleLine="true"
                android:background="@drawable/edit_text_style"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/service_price_input" />


            <EditText
                android:id="@+id/service_description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add details about the service you want"
                android:layout_below="@+id/service_price_input"
                android:lines="5"
                android:maxLines="5"
                android:textSize="18sp"
                android:gravity="top"
                android:singleLine="false"
                android:layout_marginTop="10dp"
                android:inputType="textCapSentences|textMultiLine"
                android:background="@drawable/edit_text_style"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/service_description_input" />


            <EditText
                android:id="@+id/service_address_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/service_description_input"
                android:hint="Address"
                android:textSize="18sp"
                android:gravity="top"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_style"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/service_address_input" />


            <TextView
                android:id="@+id/service_category_view"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/service_address_input"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#5b8abf"
                android:text="Category: " />

            <Spinner
                android:id="@+id/service_category_spinner"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toEndOf="@id/service_category_view"
                android:layout_below="@id/service_address_input"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:entries="@array/category" />

        </RelativeLayout>

    </ScrollView>


    <Button
        android:id="@+id/post_service_submit_btn"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/submit"
        android:textColor="#365170"
        android:textStyle="bold"
        android:background="@color/summerSky"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"/>




</RelativeLayout>