<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_input_text_white_bg"
        android:clickable="true"
        android:padding="10dp">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_launcher_background" />

        <RelativeLayout
            android:id="@+id/summaryRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImage"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/serviceImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circle"
                android:src="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/serviceImage"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/serviceTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Service Title Service Title Service Title Service Title Service Title Service Title Service Title Service Title" />

                <TextView
                    android:id="@+id/serviceDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:hint="Service Description Service Description Service Description Service Description Service Description Service Description"
                    android:maxLines="2" />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/priceRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/summaryRL"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@id/servicePrice"
                android:hint="Total Amount: " />

            <TextView
                android:id="@+id/servicePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:text="$123.00"
                android:textSize="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/priceRL"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="80dp"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:clickable="false" />

                <Button
                    android:id="@+id/chatBtn"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_black_border"
                    android:hint="Chat" />

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_black_border"
                    android:hint="Cancel" />

                <Button
                    android:id="@+id/payNowBtn"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_black_border"
                    android:hint="Pay Now" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/profileDisplayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/profileImage"
            android:text="DisplayName"
            android:textSize="16sp" />

        <!--        <TextView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:drawableStart="@drawable/search"-->
        <!--            android:gravity="start"-->
        <!--            android:layout_centerInParent="true"-->
        <!--            android:drawablePadding="3dp"-->
        <!--            android:hint="Displayname"-->
        <!--            android:textColor="@color/black"-->
        <!--            android:textSize="16sp" />-->

    </RelativeLayout>

</RelativeLayout>