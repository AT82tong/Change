<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_input_text_white_bg"
        android:padding="10dp"
        android:clickable="true">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/profileDisplayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DisplayName"
            android:layout_toEndOf="@id/profileImage"
            android:layout_marginLeft="5dp"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/summaryRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImage">

            <ImageView
                android:id="@+id/serviceImage"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_launcher_background"
                android:background="@drawable/circle"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/serviceImage"
                android:layout_marginStart="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/serviceTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginBottom="5dp"
                    android:text="Service Title Service Title Service Title Service Title Service Title Service Title Service Title Service Title"/>

                <TextView
                    android:id="@+id/serviceDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:hint="Service Description Service Description Service Description Service Description Service Description Service Description" />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/priceRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/summaryRL"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Total Amount: "
                android:layout_centerInParent="true"
                android:layout_toStartOf="@id/servicePrice" />

            <TextView
                android:id="@+id/servicePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$123.00"
                android:layout_marginStart="5dp"
                android:textSize="16dp"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/priceRL"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:layout_marginEnd="80dp"
                    android:background="#11000000"/>

                <Button
                    android:id="@+id/chatBtn"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:hint="Chat"
                    android:layout_weight="1"
                    android:background="@drawable/round_black_border"/>

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:hint="Cancel"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/round_black_border"/>

                <Button
                    android:id="@+id/payNowBtn"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:hint="Pay Now"
                    android:layout_weight="1"
                    android:background="@drawable/round_black_border" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>