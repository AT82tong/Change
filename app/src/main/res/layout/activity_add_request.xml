<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/request_service_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/text_request_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Request Service"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:src="@drawable/back_button" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/request_service_banner"
        android:background="@android:color/darker_gray" />


    <ScrollView
        android:id="@+id/info_area_new_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/request_service_submit_btn"
        android:layout_below="@id/request_service_banner"
        android:layout_marginTop="10dp">


    </ScrollView>


    <Button
        android:id="@+id/request_service_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/button"
        android:text="@string/submit"
        android:textColor="#365170"
        android:textStyle="bold" />


</RelativeLayout>