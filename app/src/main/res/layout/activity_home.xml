<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.HomeActivity">


    <SearchView
        android:id="@+id/home_search_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/home_search_box"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/home_ads_icon_button"
                android:layout_width="match_parent"
                android:layout_height="138dp"
                app:srcCompat="@drawable/ads" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/home_auto_repair_icon_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/auto_repair" />

                <ImageButton
                    android:id="@+id/home_clean_service_icon_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/clean_service" />

                <ImageButton
                    android:id="@+id/home_other_service_icon_button"
                    android:layout_width="131dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/other_services" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>