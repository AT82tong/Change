<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey">

            <RelativeLayout
                android:id="@+id/firstRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/mayaBlue">

                <android.support.v7.widget.SearchView
                    android:id="@+id/searchBox"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/search_box_style" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/homePage_ads"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/searchBox"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:background="@color/white" />

                <LinearLayout
                    android:id="@+id/sliderDots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="190dp"
                    android:gravity="center"
                    android:orientation="horizontal"></LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/smallIcon_LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/firstRL"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/homepage_service_maintenance"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/service_maintenance" />

                    <ImageView
                        android:id="@+id/homepage_service_automobile"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/service_automobile" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/homepage_service_cleaning"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/service_cleaning" />

                    <ImageView
                        android:id="@+id/homepage_service_home"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/service_home" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/homepage_service_tutor"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/service_tutor" />

                    <ImageView
                        android:id="@+id/homepage_service_gardening"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/service_gardening" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/homepage_service_moving"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/service_moving" />

                    <ImageView
                        android:id="@+id/homepage_service_all_day"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/service_all_day" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/small_ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/smallIcon_LL"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/small_ads_1"
                        android:layout_width="190dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/test_ads1" />

                    <ImageView
                        android:id="@+id/small_ads_2"
                        android:layout_width="190dp"
                        android:layout_height="95dp"
                        android:src="@drawable/test_ads1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/small_ads_3"
                        android:layout_width="190dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/test_ads1" />

                    <ImageView
                        android:id="@+id/small_ads_4"
                        android:layout_width="190dp"
                        android:layout_height="95dp"
                        android:src="@drawable/test_ads1" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/small_ads"
                android:orientation="vertical">

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>