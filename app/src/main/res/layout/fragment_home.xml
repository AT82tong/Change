<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="56dp"
    android:background="@color/grey">

    <RelativeLayout
        android:id="@+id/search_box_RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grad_light_maya_blue_bottom_aquamarine_top">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/search_box_style" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_box_RL"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/firstRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightMayaBlue">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/homePage_ads"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"
                    android:background="@color/white" />

                <LinearLayout
                    android:id="@+id/sliderDots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:gravity="center"
                    android:orientation="horizontal"></LinearLayout>

            </RelativeLayout>

            <!--<androidx.recyclerview.widget.RecyclerView-->
            <!--android:id="@+id/categoryIcons"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/firstRL"-->
            <!--android:layout_marginTop="1dp"-->
            <!--android:orientation="horizontal">-->
            <!--</androidx.recyclerview.widget.RecyclerView>-->


            <HorizontalScrollView
                android:id="@+id/horizontal_scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/firstRL"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/homepage_service_maintenance"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="5dp"
                                android:src="@drawable/service_maintenance" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/homepage_service_maintenance"
                                android:layout_centerHorizontal="true"
                                android:text="Maintenance" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">

                            <ImageView
                                android:id="@+id/homepage_service_automobile"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="5dp"
                                android:src="@drawable/service_car" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/homepage_service_automobile"
                                android:layout_centerHorizontal="true"
                                android:text="Automobile" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/homepage_service_cleaning"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="5dp"
                                android:src="@drawable/service_cleaning" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/homepage_service_cleaning"
                                android:layout_centerHorizontal="true"
                                android:text="Cleaning" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">

                            <ImageView
                                android:id="@+id/homepage_service_home"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/service_house" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/homepage_service_home"
                                android:layout_centerHorizontal="true"
                                android:text="House" />

                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/homepage_service_computer"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="5dp"
                                android:src="@drawable/service_computer" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/homepage_service_computer"
                                android:layout_centerHorizontal="true"
                                android:text="Technology" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">

                            <ImageView
                                android:id="@+id/homepage_service_gardening"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="5dp"
                                android:src="@drawable/service_garden" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/homepage_service_gardening"
                                android:layout_centerHorizontal="true"
                                android:text="Gardening" />

                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/homepage_service_moving"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="5dp"
                                android:src="@drawable/service_moving" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/homepage_service_moving"
                                android:layout_centerHorizontal="true"
                                android:text="Moving" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">

                            <ImageView
                                android:id="@+id/homepage_service_all_day"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="5dp"
                                android:src="@drawable/service_all_day" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/homepage_service_all_day"
                                android:layout_centerHorizontal="true"
                                android:text="24/7" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>


            <LinearLayout
                android:id="@+id/small_ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/horizontal_scrollView"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/small_ads_1"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/test" />

                    <ImageView
                        android:id="@+id/small_ads_2"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:src="@drawable/test" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/grey"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/small_ads_3"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/test" />

                    <ImageView
                        android:id="@+id/small_ads_4"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:src="@drawable/test" />

                </LinearLayout>

            </LinearLayout>

            <!--<androidx.recyclerview.widget.RecyclerView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@id/small_ads"-->
                <!--android:layout_marginTop="5dp">-->
            <!--</androidx.recyclerview.widget.RecyclerView>-->


            <com.ramotion.foldingcell.FoldingCell
                android:layout_marginTop="10dp"
                android:id="@+id/folding_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/small_ads">
                ​
                <LinearLayout
                    android:id="@+id/cell_content_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/holo_green_dark"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:text="Unfold First Level"
                        android:gravity="center"
                        android:textSize="24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:text="Unfold Second Level"
                        android:gravity="center"
                        android:textSize="24dp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:text="Unfold Button"
                        android:gravity="center"
                        android:textSize="24dp"/>
                </LinearLayout>
                ​
                <LinearLayout
                    android:id="@+id/cell_title_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/scampi">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/serviceCircleImageView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_launcher_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="sans-serif-light"
                            android:text="request"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="test"/>
                    </RelativeLayout>

                </LinearLayout>
                ​
            </com.ramotion.foldingcell.FoldingCell>

            </RelativeLayout>

    </ScrollView>

</RelativeLayout>